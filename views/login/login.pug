extends layout-login

block content
	form#wrapper(action='index.html')
		#box.animated.bounceIn
			#top_header
				a(href='#')
					img.logo(src='img/logo.png', alt='logo')
				h5
					| Sign in to continue to your
					br
					| 						Cloud Account.
			di#inputs
				.form-control
					input(type='text', placeholder='Email')
					i.fa.fa-envelope-o
				.form-control
					input(type='password', placeholder='Password')
					i.fa.fa-key
				input(type='submit', value='Sign In')
			#bottom
				.squared-check
					input#remember(type='checkbox', value='None', name='check', checked='')
					label(for='remember')
					.cb-label Remember
				a.right_a(href='#') Forgot password?
